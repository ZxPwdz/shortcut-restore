<Window x:Class="ShortcutRestore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ShortcutRestore.ViewModels"
        Title="Shortcut Restore"
        Height="650"
        Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>


    <!-- Main Border with rounded corners -->
    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                              BlurRadius="20"
                              Color="#000000"
                              Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="48">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="16,0,0,0">
                        <!-- App Icon -->
                        <Path Data="M4,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M4,6V18H20V6H4M6,9H18V11H6V9M6,13H16V15H6V13"
                              Fill="{DynamicResource PrimaryBrush}"
                              Width="24"
                              Height="24"
                              Stretch="Uniform"/>
                        <TextBlock Text="Shortcut Restore"
                                   Style="{StaticResource SubHeaderText}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <Button Style="{StaticResource WindowControlButton}"
                                Command="{Binding MinimizeWindowCommand}"
                                ToolTip="Minimize">
                            <Path Data="M20,14H4V10H20"
                                  Fill="{DynamicResource TextSecondaryBrush}"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource CloseButton}"
                                Command="{Binding CloseWindowCommand}"
                                ToolTip="Close">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                  Fill="{DynamicResource TextSecondaryBrush}"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                          Style="{StaticResource ModernScrollViewer}"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="20">

                    <!-- Status Toast -->
                    <Border x:Name="StatusToast"
                            Margin="0,0,0,16"
                            Padding="16,12"
                            CornerRadius="8"
                            Visibility="{Binding ShowStatus, Converter={StaticResource BoolToVis}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStatusSuccess}" Value="False">
                                        <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="Medium"/>
                    </Border>

                    <!-- Desktop Icon Presets Section -->
                    <Border Style="{StaticResource CardPanel}"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Section Header -->
                            <TextBlock Text="DESKTOP ICON PRESETS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,16"/>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,16">
                                <Button Content="Scan Current Layout"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding ScanCurrentLayoutCommand}"
                                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                        Margin="0,0,12,0"/>
                            </StackPanel>

                            <!-- New Preset Dialog -->
                            <Border Visibility="{Binding ShowNewPresetDialog, Converter={StaticResource BoolToVis}}"
                                    Background="{DynamicResource SurfaceLightBrush}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Save New Preset"
                                               Style="{StaticResource SubHeaderText}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,12">
                                        <Run Text="Scanned"/>
                                        <Run Text="{Binding ScannedIconCount, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}"/>
                                        <Run Text="desktop icons"/>
                                    </TextBlock>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding NewPresetName, UpdateSourceTrigger=PropertyChanged}"
                                             Tag="Enter preset name..."
                                             Margin="0,0,0,12"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Save Preset"
                                                Style="{StaticResource PrimaryButton}"
                                                Command="{Binding SaveNewPresetCommand}"
                                                Margin="0,0,8,0"/>
                                        <Button Content="Cancel"
                                                Style="{StaticResource SecondaryButton}"
                                                Command="{Binding CancelNewPresetCommand}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Presets List -->
                            <ItemsControl ItemsSource="{Binding Presets}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PresetCard}"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Preset Info - Display Mode -->
                                                <StackPanel Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibility}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Style="{StaticResource BodyText}"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"/>
                                                        <Button Style="{StaticResource IconButton}"
                                                                Command="{Binding StartEditCommand}"
                                                                ToolTip="Rename preset"
                                                                Width="28"
                                                                Height="28"
                                                                Margin="8,0,0,0">
                                                            <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                                  Fill="{DynamicResource TextSecondaryBrush}"
                                                                  Width="14"
                                                                  Height="14"
                                                                  Stretch="Uniform"/>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="0,4,0,0">
                                                        <TextBlock Style="{StaticResource SmallText}">
                                                            <Run Text="{Binding IconCount, Mode=OneWay}"/>
                                                            <Run Text="icons"/>
                                                        </TextBlock>
                                                        <TextBlock Text=" Â· "
                                                                   Style="{StaticResource SmallText}"/>
                                                        <TextBlock Text="{Binding CreatedAtFormatted}"
                                                                   Style="{StaticResource SmallText}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Preset Info - Edit Mode -->
                                                <StackPanel Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBox Style="{StaticResource ModernTextBox}"
                                                                 Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                                                 Width="180"
                                                                 Padding="8,6"/>
                                                        <Button Style="{StaticResource IconButton}"
                                                                Command="{Binding SaveEditCommand}"
                                                                ToolTip="Save"
                                                                Width="28"
                                                                Height="28"
                                                                Margin="8,0,0,0">
                                                            <Path Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                                                                  Fill="{DynamicResource SuccessBrush}"
                                                                  Width="14"
                                                                  Height="14"
                                                                  Stretch="Uniform"/>
                                                        </Button>
                                                        <Button Style="{StaticResource IconButton}"
                                                                Command="{Binding CancelEditCommand}"
                                                                ToolTip="Cancel"
                                                                Width="28"
                                                                Height="28"
                                                                Margin="4,0,0,0">
                                                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                                  Fill="{DynamicResource DangerBrush}"
                                                                  Width="14"
                                                                  Height="14"
                                                                  Stretch="Uniform"/>
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="1"
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibility}}">
                                                    <Button Content="Restore"
                                                            Style="{StaticResource PrimaryButton}"
                                                            Padding="12,8"
                                                            Command="{Binding RestoreCommand}"
                                                            Margin="0,0,8,0"/>
                                                    <Button Style="{StaticResource IconButton}"
                                                            Command="{Binding DeleteCommand}"
                                                            ToolTip="Delete preset">
                                                        <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                              Fill="{DynamicResource DangerBrush}"
                                                              Width="16"
                                                              Height="16"
                                                              Stretch="Uniform"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State -->
                            <Border Visibility="{Binding Presets.Count, Converter={StaticResource ZeroToVisibleConverter}}"
                                    Padding="20"
                                    HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center">
                                    <Path Data="M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V5H19V19M17,17H7V7H17V17M15,15V9H9V15H15Z"
                                          Fill="{DynamicResource TextMutedBrush}"
                                          Width="48"
                                          Height="48"
                                          Stretch="Uniform"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,12"/>
                                    <TextBlock Text="No presets saved yet"
                                               Style="{StaticResource BodySecondaryText}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Scan your current layout to create one"
                                               Style="{StaticResource SmallText}"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Quick Settings Section -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <!-- Section Header -->
                            <TextBlock Text="QUICK SETTINGS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,16"/>

                            <!-- Quick Action Buttons -->
                            <WrapPanel>
                                <Button Style="{StaticResource SecondaryButton}"
                                        Command="{Binding ClearDnsCacheCommand}"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16Z"
                                              Fill="{DynamicResource TextSecondaryBrush}"
                                              Width="16"
                                              Height="16"
                                              Stretch="Uniform"
                                              Margin="0,0,8,0"/>
                                        <TextBlock Text="Clear DNS Cache"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource SecondaryButton}"
                                        Command="{Binding EmptyRecycleBinCommand}"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                              Fill="{DynamicResource TextSecondaryBrush}"
                                              Width="16"
                                              Height="16"
                                              Stretch="Uniform"
                                              Margin="0,0,8,0"/>
                                        <TextBlock Text="Empty Recycle Bin"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource SecondaryButton}"
                                        Command="{Binding ClearRecentFilesCommand}"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M13,3A9,9 0 0,0 4,12H1L4.89,15.89L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,20 10.5,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3Z"
                                              Fill="{DynamicResource TextSecondaryBrush}"
                                              Width="16"
                                              Height="16"
                                              Stretch="Uniform"
                                              Margin="0,0,8,0"/>
                                        <TextBlock Text="Clear Recent Files"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="16,12">
                <TextBlock Text="Created by ZxPwd"
                           Style="{StaticResource SmallText}"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="3"
                    Background="#80000000"
                    CornerRadius="12"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Border Width="40"
                            Height="40"
                            CornerRadius="20"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="3"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0"
                                                         To="360"
                                                         Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
